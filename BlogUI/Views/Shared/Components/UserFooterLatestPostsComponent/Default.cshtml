@model List<Blog>
@{
	string name = Model.Count==0 ?"Daha Önce Hiçbir Post Açılmamış":"Son Postlar";
}
<div class="col-lg-4 footer-grid-agileits-w3ls text-left">
	<div class="tech-btm">
		<h3>@name</h3>
		@foreach (Blog item in Model)
		{
			<div class="blog-grids row mb-3">
				<div class="col-md-5 blog-grid-left">
					<a href="~/Bloglar/Detay/@item.BlogID">
						<img src="@item.BlogSmallImage" class="img-fluid" alt="...">
					</a>
				</div>
				<div class="col-md-7 blog-grid-right">
					<h5>
						<a href="~/Bloglar/Detay/@item.BlogID">@item.BlogTitle </a>
					</h5>
					<div class="sub-meta">
						<span>
							<i class="far fa-clock"></i> @(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))
						</span>
					</div>
				</div>
			</div>
		}
	</div>
</div>